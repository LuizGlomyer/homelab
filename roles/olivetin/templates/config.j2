authRequireGuestsToLogin: true

accessControlLists:
  - name: admins
    matchUsergroups:
      - admins
    permissions:
      view: true
      exec: true
      logs: true
    addToEveryAction: true

authLocalUsers:
  enabled: true
  users:
    - username: admin
      usergroup: admins
      password: "{{ olivetin_password_hash }}"

actions:
  - title: "Hello world!"
    shell: echo 'Hello World!'

  - title: Ping the Internet
    shell: ping google.com -c 3
    icon: üì°
    popupOnStart: execution-dialog
    timeout: 20

